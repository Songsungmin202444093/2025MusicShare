Table "사용자" as users {
  id int [pk, increment]
  name varchar(80) [not null, note: '닉네임']
  gender enum('남','여')
  birth_date date
  favorite_genres varchar(255) [note: '좋아하는 장르']
  favorite_influencer varchar(120) [note: '좋아하는 인플루언서']
  email varchar(191) [not null, unique]
  email_verified tinyint(1) [default: 0, note: '이메일 인증 여부']
  verification_token varchar(255) [note: '인증 토큰']
  token_expires_at datetime [note: '토큰 만료 시간']
  password_hash varchar(255) [not null]
  created_at datetime [default: `CURRENT_TIMESTAMP`]
  
  indexes {
    email [unique]
  }
}

Table "게시글" as posts {
  id int [pk, increment]
  user_id int [not null, ref: > users.id]
  content text [note: '게시글 내용']
  image_url varchar(500) [note: '이미지 URL']
  youtube_embed text [note: 'YouTube 임베드 코드']
  likes_count int [default: 0]
  comments_count int [default: 0]
  created_at timestamp [default: `CURRENT_TIMESTAMP`]
  updated_at timestamp [default: `CURRENT_TIMESTAMP`]
  
  indexes {
    created_at [name: 'idx_posts_created_at']
    user_id [name: 'idx_posts_user_id']
  }
}

Table "게시글_좋아요" as post_likes {
  id int [pk, increment]
  post_id int [not null, ref: > posts.id]
  user_id int [not null, ref: > users.id]
  created_at timestamp [default: `CURRENT_TIMESTAMP`]
  
  indexes {
    (post_id, user_id) [unique, name: 'unique_post_user_like']
    post_id [name: 'idx_post_likes_post_id']
    user_id [name: 'idx_post_likes_user_id']
  }
}

Table "게시글_댓글" as post_comments {
  id int [pk, increment]
  post_id int [not null, ref: > posts.id]
  user_id int [not null, ref: > users.id]
  content text [not null, note: '댓글 내용']
  created_at timestamp [default: `CURRENT_TIMESTAMP`]
  updated_at timestamp [default: `CURRENT_TIMESTAMP`]
  
  indexes {
    post_id [name: 'idx_comments_post_id']
    user_id [name: 'idx_comments_user_id']
    created_at [name: 'idx_comments_created_at']
  }
}

Table "셀럽" as celeb {
  id int [pk, increment]
  slug varchar(50) [not null, unique, note: 'URL 슬러그']
  name varchar(100) [not null, note: '셀럽 이름']
  cover varchar(255) [note: '커버 이미지']
  likes_count int [default: 0, note: 'precomputed 좋아요 수']
  created_at timestamp [default: `CURRENT_TIMESTAMP`]
  
  indexes {
    slug [unique]
  }
}

Table "셀럽_좋아요_사용자" as celeb_like_users {
  id int [pk, increment]
  user_id int [not null, ref: > users.id]
  celeb_id int [not null, ref: > celeb.id]
  created_at timestamp [default: `CURRENT_TIMESTAMP`]
  
  indexes {
    (user_id, celeb_id) [unique, name: 'uq_user_celeb']
    celeb_id [name: 'idx_celeb']
  }
}

Table "셀럽_좋아요_통계" as celeb_likes {
  celeb_name varchar(50) [pk, note: '셀럽 이름']
  likes int [default: 0, note: '좋아요 수']
}

Table "셀럽_추천곡" as celeb_recommendations {
  id int [pk, increment]
  celeb_name varchar(50) [note: '셀럽 이름']
  song_title varchar(100) [note: '곡 제목']
  artist varchar(100) [note: '아티스트']
  comment text [note: '추천 코멘트']
  source varchar(100) [note: '출처']
  youtube varchar(255) [note: 'YouTube URL']
}

Table "셀럽별_트랙" as track {
  id int [pk, increment]
  celeb_id int [not null, ref: > celeb.id]
  title varchar(200) [not null, note: '곡 제목']
  artist varchar(120) [not null, note: '아티스트']
  album varchar(200) [note: '앨범']
  note text [note: '메모']
  source varchar(200) [note: '출처']
  youtube varchar(300) [note: 'YouTube URL']
  thumb varchar(300) [note: '썸네일']
  likes int [default: 0]
  created_at timestamp [default: `CURRENT_TIMESTAMP`]
  
  indexes {
    celeb_id
  }
}

Table "트랙" as tracks {
  id int [pk, increment]
  title varchar(120) [not null, note: '곡 제목']
  artist varchar(80) [not null, note: '아티스트']
  views int [default: 0, note: '조회수']
  likes int [default: 0, note: '좋아요 수']
  youtubeId varchar(64) [not null, note: 'YouTube ID']
  thumb varchar(255) [not null, note: '썸네일']
  created_at timestamp [default: `CURRENT_TIMESTAMP`]
}

Table "트랙_좋아요" as track_likes {
  id int [pk, increment]
  user_id int [not null, ref: > users.id]
  track_id int [not null, ref: > tracks.id]
  created_at timestamp [default: `CURRENT_TIMESTAMP`]
  
  indexes {
    (user_id, track_id) [unique, name: 'uq_user_track']
    track_id [name: 'idx_track']
  }
}

Table "트랙_태그" as track_tags {
  id int [pk, increment]
  track_id int [not null, ref: > tracks.id]
  tag varchar(40) [not null, note: '태그']
  
  indexes {
    track_id
  }
}
